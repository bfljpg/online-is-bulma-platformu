
@{
    ViewData["Title"] = "Giden Mesajlar";
    Layout = "~/Views/Shared/_Layout1.cshtml";
}

@model IEnumerable<dynamic>

<h2>Giden Mesajlar</h2>

<table class="table">
    <thead>
        <tr>
            <th>Alıcı</th>
            <th>İlan</th>
            <th>Mesaj</th>
            <th>Tarih</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var message in Model)
        {
            <tr>
                <td>@message.ReceiverName</td>
                <td>@message.Title</td>
                <td>@message.Message</td>
                <td>@message.SentAt.ToString("yyyy-MM-dd HH:mm")</td>
            </tr>
        }
    </tbody>
</table>


