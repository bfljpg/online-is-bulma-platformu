
@{
    ViewData["Title"] = "CreateJobListing";
    Layout = "~/Views/Shared/_Layout1.cshtml";
}

@model online_is_bulma_platformu.Models.JobListing

<style>
    .content {
        background-color: white;
        border-radius: 12px;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
        text-align: center;
        justify-content: center;
		padding: 20px;
    }

    .form-group{
		padding: 10px;
        margin: auto;
        display: flex;
    }

	.form-control {
		padding: 10px;
		width: 100%;
	}

    .form-control#Title{
	    width: 50%;
		float: left;
		justify-content: center;
    }
</style>

<div class="container">
    <div class="content">
        <h2>Yeni İlan Ekle</h2>
        <form asp-action="CreateJobListing" method="post">
            <div class="form-group">
                <input type="text" id="Title" name="Title" class="form-control" placeholder="Başlık" required />
            </div>
            <div class="form-group">
                <textarea id="Description" name="Description" class="form-control" placeholder="Açıklama" required></textarea>
            </div>
            <div class="form-group">
                <input type="date" id="Deadline" name="Deadline" class="form-control" placeholder="Son Tarih" />
            </div>
            <button type="submit" class="btn btn-primary">Kaydet</button>
        </form>
    </div>
</div>