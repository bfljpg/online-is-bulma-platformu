
@{
    ViewData["Title"] = "İlanlarım";
    Layout = "~/Views/Shared/_Layout1.cshtml";
}

@model IEnumerable<online_is_bulma_platformu.Models.JobListing>

<h2>İlanlarım</h2>
<a asp-action="CreateJobListing" class="btn btn-primary">Yeni İlan Ekle</a>

<table class="table">
    <thead>
        <tr>
            <th>Başlık</th>
            <th>Açıklama</th>
            <th>Oluşturulma Tarihi</th>
            <th>Son Tarih</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var listing in Model)
        {
            <tr>
                <td>@listing.Title</td>
                <td>@listing.Description</td>
                <td>@listing.CreatedAt.ToString("yyyy-MM-dd")</td>
                <td>@listing.Deadline?.ToString("yyyy-MM-dd") ?? "Belirtilmemiş"</td>
                <td>
                    <form asp-action="DeleteJobListing" method="post" style="display:inline;">
                        <input type="hidden" name="id" value="@listing.Id" />
                        <button type="submit" class="btn btn-danger">Sil</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>


